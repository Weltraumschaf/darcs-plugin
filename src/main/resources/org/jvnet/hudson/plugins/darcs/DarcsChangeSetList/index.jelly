<!--
  Displays Darcs change log.
-->
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
         xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

    <j:set var="browser" value="${it.build.parent.scm.effectiveBrowser}"/>
    
    <h2>Summary</h2>

    <ol>
        <j:forEach var="cs" items="${it.logs}" varStatus="loop">
            <li>
                Patch: <a href="changes#detail${loop.index}"><st:out value="${cs.name}"/></a>
            </li>
        </j:forEach>
    </ol>

    <table class="pane" style="border:none">
        <j:forEach var="cs" items="${it.logs}" varStatus="loop">
            <tr class="pane">
                <td colspan="2" class="changeset">
                    <a name="detail${loop.index}"></a>
                    <div class="changeset-message">
                        <h3>
                            Patch ${cs.name} by <a href="${rootURL}/${cs.author.url}/">
                            ${cs.author}</a> &#8212; Hash: ${cs.hash}

                            <j:set var="cslink" value="${browser.getChangeSetLink(cs)}"/>
                            <j:choose>
                                <j:when test="${cslink!=null}">
                                    (<a title="View changes summary in code browser."
                                        href="${cslink}">${browser.descriptor.displayName}</a>)
                                </j:when>
                            </j:choose>
                        </h3>

                        <p>${cs.msgAnnotated}</p>
                    </div>
                </td>
            </tr>

            <j:forEach var="k" items="${cs.editTypes}">
                <j:forEach var="p" items="${cs.getPaths(k)}">
                    <j:set var="filedifflink" value="${browser.getFileDiffLink(cs, p)}"/>
                    <tr>
                        <td width="20">
                            <t:editTypeIcon type="${k}" />
                        </td>
                        <td>
                            ${p}
                            <j:choose>
                                <j:when test="${filedifflink!=null}">
                                    (<a title="View file diff in code browser."
                                        href="${filedifflink}">${browser.descriptor.displayName}</a>)
                                </j:when>
                            </j:choose>
                        </td>
                    </tr>
                </j:forEach>
            </j:forEach>
        </j:forEach>
    </table>
</j:jelly>